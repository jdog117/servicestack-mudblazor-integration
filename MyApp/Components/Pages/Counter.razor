@page "/counter"
@rendermode RenderMode.InteractiveServer

<PageTitle>Counter</PageTitle>

<Heading1>Counter</Heading1>

<p class="my-4">Current count: @currentCount</p>

<PrimaryButton @onclick="IncrementCount">Click me</PrimaryButton>

<MudDatePicker Label="Due date" @bind-Date="_nullableDate" />


@code {
    private int currentCount = 0;
    private DateTime? _nullableDate;

    private void IncrementCount()
    {
        currentCount++;
    }
}
